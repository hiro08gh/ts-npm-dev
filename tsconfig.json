{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.(spec|test).(ts|tsx|js)",
    "src/__tests__/"
  ]
}
